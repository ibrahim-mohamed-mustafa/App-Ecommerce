<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/zback"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/signshow"
            android:layout_width="283dp"
            android:layout_height="441dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="144dp"
            android:background="@drawable/frame1"
            android:backgroundTint="#fffafa"
            android:elevation="8dp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.466"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageBirth"
                android:layout_width="25dp"
                android:layout_height="27dp"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/signBdate"
                app:layout_constraintHorizontal_bias="0.866"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.599"
                app:srcCompat="@drawable/birth" />

            <EditText
                android:id="@+id/signemail"
                android:layout_width="200dp"
                android:layout_height="32dp"
                android:layout_marginTop="84dp"
                android:ems="10"
                android:fontFamily="@font/rubik_bold"
                android:hint="E_mail"
                android:inputType="text"

                android:textColor="@color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.637"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/signBdate"
                android:layout_width="200dp"
                android:layout_height="32dp"
                android:layout_marginTop="244dp"
                android:ems="10"
                android:enabled="false"
                android:fontFamily="@font/rubik_bold"
                android:hint="Birth date"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.637"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/signpassword"
                android:layout_width="200dp"
                android:layout_height="32dp"
                android:layout_marginTop="136dp"
                android:ems="10"
                android:fontFamily="@font/rubik_bold"
                android:hint="Password"
                android:inputType="text|textPassword"
                android:textColor="@color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.637"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/signconfirmpassword"
                android:layout_width="200dp"
                android:layout_height="32dp"
                android:layout_marginTop="188dp"
                android:ems="10"
                android:fontFamily="@font/rubik_bold"
                android:hint="Confirm Password"

                android:inputType="text|textPassword"
                android:textColor="@color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.637"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/sign"
                android:layout_width="126dp"
                android:layout_height="38dp"
                android:layout_marginTop="324dp"
                android:background="@drawable/btn_log_sign"
                android:onClick="SignGo"
                android:text="Sign Up"
                app:backgroundTint="@color/teal_200"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageEmail"
                android:layout_width="26dp"
                android:layout_height="25dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/signemail"
                app:layout_constraintHorizontal_bias="0.923"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.201"
                app:srcCompat="@drawable/gmail1" />

            <ImageView
                android:id="@+id/imagePass"
                android:layout_width="29dp"
                android:layout_height="27dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/signpassword"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.326"
                app:srcCompat="@drawable/key1" />

            <ImageView
                android:id="@+id/imageConfirmPass"
                android:layout_width="27dp"
                android:layout_height="40dp"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.444"
                app:srcCompat="@drawable/key1" />

            <ImageView
                android:id="@+id/imageClender"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_marginStart="180dp"
                android:layout_marginLeft="180dp"
                android:layout_marginBottom="196dp"
                android:onClick="Calender"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/imageBirth"
                app:srcCompat="@drawable/calender" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/imageCart"
            android:layout_width="82dp"
            android:layout_height="65dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toTopOf="@+id/signshow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/cart" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>